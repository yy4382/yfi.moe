---
import NoteList from "@comp/modules/Note/NoteList.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

import { CompactEntryList } from "@comp/modules/CompactEntryList";
import { getSeo } from "@utils/SEO";

export const prerender = false;

const seo = getSeo({
  title: "Notes",
  description: "A collection of notes on various topics.",
  type: "website",
  noindex: true,
});
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=3600, stale-while-revalidate=3600",
);
---

<BaseLayout seoConfig={seo} navStats="碎碎念">
  <CompactEntryList keyword="碎碎念">
    <NoteList />
  </CompactEntryList>
</BaseLayout>
