---
import Card from "@comp/elements/Card.astro";
import { Icon } from "astro-icon/components";
import { tvButton } from "@styles/tv";
import { type CollectionEntry } from "astro:content";
interface Props {
  project: CollectionEntry<"project">;
}
const { project: projectRaw } = Astro.props;
const project = projectRaw.data;
---

<Card class="flex flex-col justify-between space-y-4 p-4">
  <div class="space-y-4">
    <h2 class="text-xl text-heading">{project.name}</h2>
    <p class="text-sm text-content">
      {project.description}
    </p>
  </div>
  <div class="flex justify-between">
    <div class="flex items-center text-heading">
      {
        project.language.map((lang) => (
          <div class="p-2">
            <Icon name={lang} size={24} />
          </div>
        ))
      }
    </div>
    <div class="flex items-center">
      {
        project.links.map((link) => (
          <a
            href={link.url}
            class={tvButton({ class: "rounded-full p-2 text-heading" })}
          >
            <Icon name={link.icon} size={24} />
          </a>
        ))
      }
    </div>
  </div>
</Card>
