---
import Section from "@/components/ui/section.astro";
import PostAttrTime from "@/components/modules/posts/post-attr-time.astro";
import PostAttrTags from "@/components/modules/posts/post-attr-tags.astro";
import type { ContentTimeData } from "@/content.config";

interface Props {
  title: string;
  time: ContentTimeData;
  tags?: string[];
}

const { title, time, tags } = Astro.props;
---

<Section class="center mx-auto flex flex-col gap-6 py-24" padding="article">
  <h1 class="text-heading text-center text-3xl font-bold">{title}</h1>
  <div
    class="text-comment flex flex-col items-center gap-2 text-[0.8rem] md:flex-row lg:gap-3"
  >
    <PostAttrTime {...time} />
    {tags && <PostAttrTags tags={tags} />}
  </div>
</Section>
