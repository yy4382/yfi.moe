---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex select-none items-center">
  <span class="i-lucide-hash mr-1 size-4"></span>
  <span class="space-x-0.5">
    {
      tags.map((tag, index) => (
        <>
          {index !== 0 && <span class="text-comment">|</span>}
          <a
            href={`/tags/${tag}`}
            class="hover:text-accent-foreground transition"
          >
            {tag}
          </a>
        </>
      ))
    }
  </span>
</div>
