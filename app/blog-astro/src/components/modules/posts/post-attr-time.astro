---
import type { ContentTimeData } from "@/content.config";
import { PostAttrTimeTooltip as PostAttrTimeReact } from "./post-attr-time-tooltip";

type Props = ContentTimeData;

// rebinding because the passed-in props may have other properties
// since the props will be embedded into the html (because of passing them to react component),
// we need to rebinding the props to the content time data
const time: ContentTimeData = {
  writingDate: Astro.props.writingDate,
  publishedDate: Astro.props.publishedDate,
  updatedDate: Astro.props.updatedDate,
};
---

<PostAttrTimeReact time={time} client:idle />
